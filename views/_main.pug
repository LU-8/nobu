doctype

include _util.pug

html(lang="en")
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')

    meta(name='theme-color' content='#2C2F33')
    meta(name="apple-mobile-web-app-status-bar-style" content="#2C2F33")

    title= (attr && attr.title ? attr.title + ' | ' : '') + 'nobu'

    block head

    +style('css/nobu.css')
    +style("//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/atom-one-dark.min.css")  
    +style('https://fonts.googleapis.com/css?family=Roboto:400,400i,700,700i')
    +style("https://fonts.googleapis.com/css?family=Ubuntu+Mono:400,400i,700,700i")
  

  body
    block content

  block after

  script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js")
  script hljs.initHighlightingOnLoad();